{
    "include": ["src/"],
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib/",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["src/typings", "node_modules/@types"]
    },
    "typedocOptions": {
        "excludePrivate": true,
        "includeVersion": true,
        "name": "tgcallsjs",
        "out": "docs/",
        "readme": "none"
    }
}
